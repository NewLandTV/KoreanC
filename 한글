// 자료형
typedef void 빈;
typedef short 짧은정수;
typedef unsigned short 부호없는짧은정수;
typedef int 정수;
typedef unsigned int 부호없는정수;
typedef long long 긴긴정수;
typedef unsigned long long 부호없는긴긴정수;
typedef bool 불;
typedef float 실수;
typedef double 정밀실수;
typedef char 문자;
typedef unsigned char 부호없는문자;

// conio.h 관련
#include <conio.h>

#define 누름자판눌림 _kbhit()
#define 눌린자판얻기 _getch()

// Windows.h 관련
#include <Windows.h>

// 함수를 한글로 호출할 수 있게 전처리기 작업
#define 출력창이동막대정보설정 SetConsoleCursorInfo
#define 출력창이동막대좌표설정 SetConsoleCursorPosition
#define 출력창화면버퍼치수 SetConsoleScreenBufferSize
#define 표준관리자얻기 GetStdHandle
#define 표준관리자설정 SetStdHandle

// STD_ INPUT OUTPUT ERROR _HANDLE
#define 표준_입력_관리자 STD_INPUT_HANDLE
#define 표준_출력_관리자 STD_OUTPUT_HANDLE
#define 표준_문제_관리자 STD_ERROR_HANDLE

typedef struct _CONSOLE_CURSOR_INFO 출력창_이동막대_정보;
typedef struct _COORD 좌표;

// stdlib.h 관련
#include <stdlib.h>

#define 시스템 system

// time.h 관련
#include <time.h>

#define 시간 time

